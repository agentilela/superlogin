    "@types/nodemailer": "^6.2.0",
    "@types/nodemailer-stub-transport": "^1.1.4",
    "@types/pouchdb-node": "^6.1.2",
    "@types/pouchdb-upsert": "^2.2.3",
    "@types/redis": "^2.8.6",
    "@types/superagent": "^4.1.1",
    "@types/urlsafe-base64": "^1.0.28",
    "@types/uuid": "^3.4.3",
    "babel-plugin-module-resolver": "^3.1.1",
    "body-parser": "^1.9.2",
